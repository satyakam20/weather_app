<%= form_with url: weather_forecast_path, method: :post, local: true, class: "address-form" do |form| %>
  <div class="form-group">
    <%= form.label :address, "Address:", class: "form-label" %>
    <%= form.text_field :address, 
        placeholder: "Enter street address, city, state, or zip code", 
        class: "form-control",
        value: @address %>
  </div>
  
  <div class="form-group">
    <%= form.submit "Get Weather", class: "btn btn-primary" %>
  </div>
<% end %>
